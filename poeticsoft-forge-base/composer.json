{
  "name": "poeticsoft/forge-base",
  "description": "Base module for Poeticsoft Forge ecosystem",
  "type": "wordpress-plugin",
  "version": "0.0.0",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Poeticsoft Team",
      "email": "alberto@poeticsoft.com"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "autoload": {
    "psr-4": {
      "Poeticsoft\\Forge\\Base\\": "class/Forge/Base"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^4.0"
  },
  "scripts": {
    "format": "phpcbf .",
    "lint": "phpcs ."
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    },
    "optimize-autoloader": true
  }
}